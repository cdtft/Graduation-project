<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.cdut.shici.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前关数:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_number"
            android:text="0"
            android:textColor="#2A84E8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="#2A84E8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textview_rank"
            android:text="当前排名:"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_poetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请找出正确的诗词"
            android:textSize="40sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A84E8" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3">

        <com.dd.CircularProgressButton
            android:id="@+id/button_2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_6"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_7"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_8"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_9"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />

        <com.dd.CircularProgressButton
            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:cpb_cornerRadius="10dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept" />
    </GridLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <com.dd.CircularProgressButton
                android:id="@+id/button_submit"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="30sp"
                app:cpb_cornerRadius="10dp"
                app:cpb_iconComplete="@mipmap/ic_action_accept"
                app:cpb_iconError="@mipmap/ic_action_cancel"
                app:cpb_textIdle="提交" />

            <com.dd.CircularProgressButton
                android:id="@+id/button_reset"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="30sp"
                app:cpb_cornerRadius="10dp"
                app:cpb_iconComplete="@mipmap/ic_action_accept"
                app:cpb_iconError="@mipmap/ic_action_cancel"
                app:cpb_textIdle="重置" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_imageView_adb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_shortcut_adb_pressed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="九宫格" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_imageView_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_shortcut_keyboard_voice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:text="飞花令" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_imageView_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_shortcut_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:text="琅琊榜" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_imageView_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_shortcut_account_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp"
                        android:text="我" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
